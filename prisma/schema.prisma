// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DB_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
}

model Player {
  id        Int    @id
  name      String @unique
  playerStats PlayerStats?
}

model PlayerStats {
  id              String  @id @default(uuid())
  player          Player  @relation(fields: [playerId], references: [id])
  playerId        Int     @unique
  level           Int     @default(0)
  experience      String  @default("0")
  enemiesDefeated Int     @default(0)
  deaths          Int     @default(0)
  timePlayed      String  @default("0")
  tripsFinished   Int     @default(0)
  battlesWon      Int     @default(0)
  mineralsMined   Int     @default(0)
}

model Mine {
  id Int @id @default(autoincrement())
  name String @unique
  mineStats MineStats?
}

model MineStats {
  id String @id @default(uuid())
  mine   Mine @relation(fields: [mineId], references: [id])
  mineId Int @unique
  minutes Float
  kills Int
  minerals Int
}
